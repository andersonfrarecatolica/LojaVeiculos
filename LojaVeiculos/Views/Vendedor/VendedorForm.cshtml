@model LojaVeiculos.Models.Vendedor
@{
    ViewBag.Title = Model.Id == 0 ? "Novo Vendedor" : "Editar Vendedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Vendedor"))
{
    @Html.HiddenFor(v => v.Id)
    <div class="form-group">
        @Html.LabelFor(v => v.Nome)
        @Html.TextBoxFor(v => v.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Cpf)
        @Html.TextBoxFor(v => v.Cpf, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Cpf)
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Email)
        @Html.TextBoxFor(v => v.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Telefone)
        @Html.TextBoxFor(v => v.Telefone, new { @class = "form-control" })
        @Html.ValidationMessageFor(v => v.Telefone)
    </div>
   
    <button type="submit" class="btn btn-primary">Salvar</button>
}

@section scripts{

    @Scripts.Render("~/bundles/jqueryval");

}