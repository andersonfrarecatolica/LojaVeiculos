@model LojaVeiculos.ViewModels.VendaIndexViewModel
@{
    ViewBag.Title = "VendaForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Venda"))
{
    @Html.HiddenFor(v => v.Venda.Id)
    <div class="form-group">
        @Html.LabelFor(v => v.Venda.VeiculoId)
        @Html.DropDownListFor(v => v.Venda.VeiculoId,
            new SelectList(Model.Veiculos, "Id", "Modelo"), "Escolha", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Venda.VendedorId)
        @Html.DropDownListFor(v => v.Venda.VendedorId,
            new SelectList(Model.Vendedores, "Id", "Nome"), "Escolha", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Venda.ClienteId)
        @Html.DropDownListFor(v => v.Venda.ClienteId,
            new SelectList(Model.Clientes, "Id", "Nome"), "Escolha", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Venda.NotaFiscal)
        @Html.TextBoxFor(v => v.Venda.NotaFiscal, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Venda.Data)
        @Html.TextBoxFor(v => v.Venda.Data, "{0: dd/MM/yyyy }", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(v => v.Venda.Valor)
        @Html.TextBoxFor(v => v.Venda.Valor, new { @class = "form-control" })
    </div>
    
    <button type="submit" class="btn btn-primary">Salvar</button>
}