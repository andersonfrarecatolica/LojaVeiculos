@model IEnumerable<LojaVeiculos.Models.Venda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Venda
    @Html.ActionLink("Nova Venda", "New", null, new { @class = "btn btn-primary pull-right" })
</h2>

@if (@Model.Any())
{

    <table class="table">
        <caption>Optional table caption.</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nota Fiscal</th>
                <th>Data</th>
                <th>Valor</th>
                <th>Ver Cliente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venda in Model)
            {
                <tr>
                    <th scope="row">@venda.Id</th>
                    <td>@venda.NotaFiscal</td>
                    <td>@venda.Data</td>
                    <td>@venda.Valor</td>
                    <td>@Html.ActionLink(@venda.NotaFiscal, "Details", new { venda.Id })</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{

    <p>Nenhuma venda cadastrada!</p>

}